//prisma\schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["cvguard_firstcold"]
}

model CvUpload {
  id         String   @id @default(cuid())
  fullName   String
  email      String
  phone      String
  skills     String
  experience String
  pdfText    String
  createdAt  DateTime @default(now())

  @@schema("cvguard_firstcold")
}




